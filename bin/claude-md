#!/bin/bash
# SPDX-License-Identifier: GPL-3.0-or-later
# Orchestrator for Claude Code configuration initialization

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"
REPO_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"
CLAUDE_DIR="$HOME/.claude"
LIB_DIR="$REPO_DIR/lib"

mkdir -p "$CLAUDE_DIR"

# Remove old symlinks/directories and create fresh directories with merged content
rm -rf "$CLAUDE_DIR/instructions" "$CLAUDE_DIR/agents"
mkdir -p "$CLAUDE_DIR/instructions" "$CLAUDE_DIR/agents"

# Run generic handlers and track what changed
instructions_output=$("$LIB_DIR/instructions" "$REPO_DIR" "$CLAUDE_DIR" 2>&1)
if [[ -n "$instructions_output" ]]; then
    echo "$instructions_output"
else
    echo "claude: instructions unchanged"
fi

agents_output=$("$LIB_DIR/agents" "$REPO_DIR" "$CLAUDE_DIR" 2>&1)
if [[ -n "$agents_output" ]]; then
    echo "$agents_output"
else
    echo "claude: agents unchanged"
fi

settings_output=$("$LIB_DIR/settings" "$REPO_DIR" "$CLAUDE_DIR" 2>&1)
if [[ -n "$settings_output" ]]; then
    echo "$settings_output"
else
    echo "claude: settings unchanged"
fi

# Copy CLAUDE.md template
src="$REPO_DIR/dist/CLAUDE.md"
dest="$CLAUDE_DIR/CLAUDE.md"
if [[ ! -f "$dest" ]] || ! cmp -s "$src" "$dest"; then
    cp "$src" "$dest"
    echo "claude: CLAUDE.md updated"
else
    echo "claude: CLAUDE.md unchanged"
fi

# Append user-only instructions (not in dist/)
if [[ -d "$REPO_DIR/user/instructions" ]]; then
    dist_instructions=()
    if [[ -d "$REPO_DIR/dist/instructions" ]]; then
        while IFS= read -r file; do
            dist_instructions+=("$(basename "$file")")
        done < <(find "$REPO_DIR/dist/instructions" -maxdepth 1 -type f -name "*.md")
    fi

    user_only_found=0
    while IFS= read -r user_file; do
        filename=$(basename "$user_file")
        if [[ ! " ${dist_instructions[@]} " =~ " ${filename} " ]]; then
            if [[ $user_only_found -eq 0 ]]; then
                echo "" >> "$dest"
                user_only_found=1
            fi
            echo "@instructions/$filename" >> "$dest"
        fi
    done < <(find "$REPO_DIR/user/instructions" -maxdepth 1 -type f -name "*.md")
fi

# Run special-case handlers from instructions.d/ (distribution first, then user)
for instructions_dir in "$LIB_DIR/instructions.d" "$REPO_DIR/user/lib/instructions.d"; do
    if [[ -d "$instructions_dir" ]]; then
        while IFS= read -r handler; do
            [[ -x "$handler" ]] && "$handler" "$REPO_DIR" "$CLAUDE_DIR" 2>&1
        done < <(find "$instructions_dir" -maxdepth 1 -type f -perm -u+x | sort)
    fi
done
